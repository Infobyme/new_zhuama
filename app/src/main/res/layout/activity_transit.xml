<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FEEE35">


    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_welcome_like"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_like1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_welcome_like1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_welcome_follow"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_hey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_welcome_hey"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_welcome_message"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/iv_drama_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_welcome_drama" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_register"
            style="@style/tv_c_000000"
            android:layout_width="149dp"
            android:layout_height="43dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/transit_shape_register"
            android:text="@string/transit_register" />

        <Button
            android:id="@+id/btn_login"
            style="@style/tv_c_000000"
            android:layout_width="149dp"
            android:layout_height="43dp"
            android:background="@drawable/transit_shape_login"
            android:text="@string/transit_login" />

    </LinearLayout>


</FrameLayout>