<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_schedule_time"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="10:00" />


    <View
        android:id="@+id/view_schedule_color"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_schedule_time" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/view_schedule_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_schedule_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备绝对游戏物料准备" />

        <TextView
            android:id="@+id/tv_schedule_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="绝对游戏物料准备"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_schedule_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="17:00-18:30"
            android:textSize="13sp" />
    </LinearLayout>


</RelativeLayout>